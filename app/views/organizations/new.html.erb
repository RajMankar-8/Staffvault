<div class="container-fluid">
  <%= form_with model: @organization do |form| %>
  <div class="row">
    <div class="col-md-4 mx-4">
      <%= image_tag "document.gif", class:"img-fluid"%>
    </div>
    <div class="col-md-3 mx-5">
      <div class="form-group my-4">
        <span>
          <%= form.label :name, class:'mb-2 fw-bold' %>
          <img width="24" height="24" src="https://img.icons8.com/ios/50/user-male-circle--v1.png" alt="user-male-circle--v1"/ class="ms-2 mb-1">
        </span>
        <%= form.text_field :name, class:'form-control form-control-lg rounded-0' %>
        <% @organization.errors.full_messages_for(:name).each do |message| %>
        <p class="text-danger"> <%= message %></p>
        <% end %>
      </div>

    <%= form.hidden_field :user_id, value: current_user.id %>

      <div class="form-group ">
        <span>
          <%= form.label :About ,class:'mb-2 fw-bold'%>
          <img width="22" height="22" src="https://img.icons8.com/ios/50/add-file.png" alt="add-file" class="ms-2" />
        </span>
        <%= form.text_field :about, class:'form-control form-control-lg rounded-0' %>
        <% @organization.errors.full_messages_for(:about).each do |message| %>
        <p class="text-danger"> <%= message %></p>
        <% end %>
        <br>
      </div>

      <div class="mb-3">
        <%= form.label :logo %><br>
        <%= form.file_field :logo %>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <%= form.submit "Create Organization", class: 'btn btn-primary btn-lg rounded-0 me-2' %>
          <%= link_to "back to Home", root_path, class:"btn btn-outline-primary btn-lg rounded-0" %>
        </div>
      </div>
    </div>
    <div class="col-md-3 mx-4">
      <%= image_tag "app/assets/images/app/assets/images/doc-2.jpeg

", class:'mt-5'%>
    </div>
  </div>
  <% end %>
</div>