<div class="container-fluid">
	<%= form_with model: personal do |form| %>
	<div class="row">
		<div class="col-md-4 mx-4">
			<%= image_tag "document.gif", class:"img-fluid"%>
		</div>
		<div class="col-md-3 mx-5">
			<div class="form-group my-4">
				<span>
					<%= form.label :name, class:'mb-2 fw-bold' %>
					<img width="24" height="24" src="https://img.icons8.com/ios/50/user-male-circle--v1.png" alt="user-male-circle--v1"/ class="ms-2 mb-1">
				</span>
				<%= form.text_field :name, class:'form-control form-control-lg rounded-0' %>
				<% @personal.errors.full_messages_for(:name).each do |message| %>
				<p class="text-danger"> <%= message %></p>
				<% end %>
			</div>

			<div class="form-group my-4">
				<span>
					<%= form.label :doc_type, class:'mb-2 fw-bold' %>
					<img width="25" height="25" src="https://img.icons8.com/ios/50/document-1.png" alt="document-1" class="ms-1" />
				</span>
				<%= form.select :doc_type, options_for_select(Personal::DOC_TYPES, selected: personal.doc_type),{prompt: 'Select document type'}, {class:'form-select form-select-lg rounded-0'} %>
				<% @personal.errors.full_messages_for(:doc_type).each do |message| %>
				<p class="text-danger"> <%= message %></p>
				<% end %>
			</div>

				<%= form.hidden_field :worker_id, value: @worker_id %>

			<div class="form-group my-4">
				<span>
					<%= form.label :Document ,class:'mb-2 fw-bold'%>
					<img width="22" height="22" src="https://img.icons8.com/ios/50/add-file.png" alt="add-file" class="ms-2" />
				</span>
				<% @personal.errors.full_messages_for(:image).each do |message| %>
				<p class="text-danger"> <%= message %></p>
				<% end %>
				<br>
				<%= form.file_field :image %>

			</div>
			<div class="row">
				<div class="col-lg-12 mt-4">
					<%= form.submit "Create Document", class: 'btn btn-primary btn-lg rounded-0 me-2' %>
					<%= link_to "back to Document",worker_path(@worker_id), class:"btn btn-outline-primary btn-lg rounded-0" %>
				</div>
			</div>
		</div>
		<div class="col-md-3 mx-4">
			<%= image_tag "doc-2.jpeg", class:'mt-5'%>
		</div>
	</div>
	<% end %>
</div>